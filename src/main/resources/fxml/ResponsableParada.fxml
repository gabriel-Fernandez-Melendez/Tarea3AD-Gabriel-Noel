<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@../styles/Styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Gabriel.Noel.tarea3AD2024base.controller.UserController">
   <center>
      <VBox alignment="TOP_RIGHT" prefHeight="571.0" prefWidth="692.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="TOP_RIGHT" prefHeight="41.0" prefWidth="640.0">
               <children>
                  <Label alignment="CENTER" prefHeight="40.0" prefWidth="870.0" text="Lista de Peregrinos">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#logout" prefHeight="30.0" prefWidth="130.0" styleClass="background" text="Cerrar Sesion" textFill="#fff9f9" textOverrun="CLIP">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="5.0" top="5.0" />
                     </HBox.margin>
                     <effect>
                        <DropShadow blurType="ONE_PASS_BOX" color="#00000091" />
                     </effect>
                  </Button>
               </children>
            </HBox>
            <TableView fx:id="tablaPeregrinos" prefHeight="300.0" prefWidth="679.0" tableMenuButtonVisible="true">
              <columns>
                <TableColumn fx:id="colUserId" maxWidth="700.0" prefWidth="20.0" text="ID" />
                <TableColumn fx:id="colFirstName" maxWidth="4000.0" prefWidth="75.0" text="Nombre" />
                  <TableColumn fx:id="colLastName" maxWidth="4000.0" prefWidth="75.0" text="Apellidos" />
                  <TableColumn fx:id="colDOB" maxWidth="4000.0" prefWidth="75.0" text="Fecha de Nacimiento" />
                  <TableColumn fx:id="colGender" maxWidth="4000.0" prefWidth="60.0" text="Genero" />
                  <TableColumn fx:id="colEmail" maxWidth="6000.0" prefWidth="130.0" text="Email" />
              </columns>
               <VBox.margin>
                  <Insets left="10.0" right="5.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <contextMenu>
                  <ContextMenu>
                    <items>
                      <MenuItem fx:id="deleteUsers" mnemonicParsing="false" onAction="#deleteUsers" text="Delete" />
                    </items>
                  </ContextMenu>
               </contextMenu>
            </TableView>
            <VBox prefHeight="262.0" prefWidth="694.0">
               <children>
                  <HBox prefHeight="48.0" prefWidth="694.0">
                     <children>
                        <Label alignment="CENTER" prefHeight="26.0" prefWidth="175.0" text="Fecha de Inicio">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </Label>
                        <DatePicker fx:id="fechaInicio" prefHeight="25.0" prefWidth="190.0">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </DatePicker>
                        <Label text="Sellar Carnet">
                           <HBox.margin>
                              <Insets left="350.0" top="10.0" />
                           </HBox.margin>
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox layoutX="10.0" layoutY="10.0" prefHeight="48.0" prefWidth="1000.0">
                     <children>
                        <Label alignment="CENTER" prefHeight="26.0" prefWidth="175.0" text="Fecha Fin">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </Label>
                        <DatePicker fx:id="fechaFin" prefHeight="25.0" prefWidth="190.0">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </DatePicker>
                        <CheckBox fx:id="esVip" mnemonicParsing="false" text="Es VIP">
                           <HBox.margin>
                              <Insets left="300.0" right="50.0" top="10.0" />
                           </HBox.margin>
                        </CheckBox>
                        <CheckBox fx:id="noVip" mnemonicParsing="false" text="No es VIP">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </CheckBox>
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="botonExportarParada" alignment="CENTER" mnemonicParsing="false" text="Exportar Parada">
                           <HBox.margin>
                              <Insets left="175.0" right="450.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="botonAceptarSellado" mnemonicParsing="false" text="Aceptar">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label alignment="CENTER" prefHeight="36.0" prefWidth="180.0" text="BIENVENIDO A ">
                           <font>
                              <Font size="25.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="350.0" />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="labelParadaResponsable" text="Parada X">
                           <font>
                              <Font size="25.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
