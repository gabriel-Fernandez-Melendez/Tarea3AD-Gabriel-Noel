<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@../styles/Styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Gabriel.Noel.tarea3AD2024base.controller.EstanciasFiltradasController">
   <center>
      <VBox alignment="TOP_RIGHT" prefHeight="571.0" prefWidth="692.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="TOP_RIGHT" prefHeight="41.0" prefWidth="640.0">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="118.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" top="5.0" />
                     </HBox.margin>
                  </ImageView>
                  <Label alignment="CENTER" prefHeight="118.0" prefWidth="739.0" text="Lista de Peregrinos">
                     <font>
                        <Font size="40.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#volverALogin" prefHeight="30.0" prefWidth="130.0" styleClass="background" text="Cerrar Sesion" textFill="#fff9f9" textOverrun="CLIP">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="5.0" right="20.0" top="40.0" />
                     </HBox.margin>
                     <effect>
                        <DropShadow blurType="ONE_PASS_BOX" color="#00000091" />
                     </effect>
                  </Button>
               </children>
            </HBox>
            <TableView fx:id="tablaPeregrinosFiltrados" prefHeight="471.0" prefWidth="985.0" tableMenuButtonVisible="true">
              <columns>
                <TableColumn fx:id="colPeregrinoID" maxWidth="700.0" prefWidth="90.0" text="ID" />
                <TableColumn fx:id="colNombre" maxWidth="4000.0" prefWidth="168.0" text="Nombre" />
                  <TableColumn fx:id="colFechaSellado" maxWidth="4000.0" prefWidth="374.0" text="Fecha Sellado" />
                  <TableColumn fx:id="colSeEstancio" maxWidth="6000.0" prefWidth="242.0" text="Se Estanció" />
                  <TableColumn fx:id="colEsVIP" maxWidth="6000.0" prefWidth="104.0" text="VIP" />
              </columns>
               <VBox.margin>
                  <Insets left="10.0" right="5.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <VBox prefHeight="262.0" prefWidth="694.0">
               <children>
                  <HBox prefHeight="79.0" prefWidth="1000.0">
                     <children>
                        <Button fx:id="botonVolverAtras" mnemonicParsing="false" onAction="#volverAtras" prefHeight="15.0" prefWidth="130.0" styleClass="background" text="Volver Atrás" textFill="#fff9f9" textOverrun="CLIP">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <effect>
                              <DropShadow blurType="ONE_PASS_BOX" color="#00000091" />
                           </effect>
                           <HBox.margin>
                              <Insets left="20.0" top="20.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="botonReseteo" mnemonicParsing="false" onAction="#resetearFechas" prefHeight="15.0" prefWidth="130.0" styleClass="background" text="Resetear Fechas" textFill="#fff9f9" textOverrun="CLIP">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <effect>
                              <DropShadow blurType="ONE_PASS_BOX" color="#00000091" />
                           </effect>
                           <HBox.margin>
                              <Insets left="50.0" right="20.0" top="20.0" />
                           </HBox.margin>
                        </Button>
                        <Label text="Desde">
                           <HBox.margin>
                              <Insets right="5.0" top="25.0" />
                           </HBox.margin>
                        </Label>
                        <DatePicker fx:id="fechaFiltradoInicio" prefHeight="32.0" prefWidth="174.0">
                           <HBox.margin>
                              <Insets top="20.0" />
                           </HBox.margin>
                        </DatePicker>
                        <Label text="Hasta">
                           <HBox.margin>
                              <Insets left="30.0" right="5.0" top="25.0" />
                           </HBox.margin>
                        </Label>
                        <DatePicker fx:id="fechaFiltradoFin" prefHeight="31.0" prefWidth="174.0">
                           <HBox.margin>
                              <Insets top="20.0" />
                           </HBox.margin>
                        </DatePicker>
                        <Button fx:id="botonFiltrarEstancias" mnemonicParsing="false" onAction="#filtrarEstancias" prefHeight="15.0" prefWidth="130.0" styleClass="background" text="Filtrar Estancias" textFill="#fff9f9" textOverrun="CLIP">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <effect>
                              <DropShadow blurType="ONE_PASS_BOX" color="#00000091" />
                           </effect>
                           <HBox.margin>
                              <Insets left="50.0" top="20.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
